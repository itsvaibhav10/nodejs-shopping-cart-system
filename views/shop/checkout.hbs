<div class="row section ">
    <div class="col s4 m4 offset-s4 offset-m4 indigo darken-2 white-text  ">
        <br>
        <h1 class="center hero">Checkout</h1>
        <h3 class="center hero">Total Price: <span class="amber-text">${{total}}</span> </h3>

        <form action="/checkout" method="post" id="payment-form">
            <div class="input-field">
                <label>Card Holder Name</label>
                <input type="text" name="StripeCardHolder" class="validate" id="card-name" placeholder="Card Holder Name Here"
                    required>
            </div>
            <div class="input-field">
                <label for="inputEmail">Name</label>
                <input type="email" name="stripeEmail" class="validate" id="inputEmail" placeholder="xxx@xxx.com"
                    required>
            </div>
            <div class="input-field">
                <label for="inputAddress">Address</label>
                <input type="text" name="stripeAddress" class="validate" id="inputAddress" placeholder="1234 Main St"
                    required>
            </div>

            <div class="">
                <label for="card-element">
                    Credit or debit card
                </label>
                <div id="card-element" class="input-field">
                    <!-- A Stripe Element will be inserted here. -->
                </div>

                <!-- Used to display form errors. -->
                <div id="card-errors" role="alert"></div>
            </div>
            <br>
            <button class="btn waves-effect waves-light indigo accent-3">Submit Payment</button>
        </form>
        <br>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="/javascripts/checkout.js"></script>