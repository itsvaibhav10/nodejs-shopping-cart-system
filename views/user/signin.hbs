<div class="row">
    <div class="col s10 m8 offset-s1 offset-m2 teal lighten-1" style="border: 5px solid black;margin-top:5vh;">
        <h1 class="hero center white-text">Login</h1>
        {{# if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p> {{this}} </p>
                {{/each}}
            </div> {{/if}}
        <form action="/user/signin" method="POST">
            <div class="input-field">
                <input type="email" name="email" class="validate" id="email" placeholder="Enter Email Here">
            </div>
            <div class="input-field">
                <input type="password" name="password" class="form-control" id="password" placeholder="Password">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn amber">Sign In</button>
            <button type="reset" class="btn amber">Reset</button>
            <p>Don't Have an Account? <a href="/user/signup" class=" white-text">Signup Here</a></p>
        </form>
    </div>
</div>